!Abhindev C H 21HPH2601

program circle
implicit none
real :: radius, pi, area, circumference

pi = 3.14159265
print *, "Enter radius oof the circle : "
read *, radius
area = pi * radius**2
circumference = 2*pi*radius
print *, "Area of the circle is : ", area
print *, "The circumference of the circle is = ", circumference
end program circle


!Abhindev C H 21HPH2601

program length_conversion
implicit none
real :: x, meters, centimeters
integer :: millimeters

read *, x 
meters = x/1000
centimeters = x/100
millimeters = x
print *, "meters = ", meters
print *, "centimeters = ", centimeters
print *, "millimeters = ", millimeters
end program length_conversion
